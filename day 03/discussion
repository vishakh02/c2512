end else

pseudocode :
isLeapYearTest()

code :
#include <iostream>
#include <cmath>

using namespace std;

bool isLeapYear(int year)

{
    if(year % 4 == 0)
    {
        return true;
    }
    if(year % 400 ==0 && year % 100 != 0 )
    {
        return true;
    }
    return false;
}


void isLeapYearTest()
{
    int year;
    cout<<"Enter the Year : ";
    cin>>year;
    
    if(isLeapYear(year))
    {
        cout<<"Leap Year"<<year<<endl;
    }
    else
    {
        cout<<"Not Leap Year"<<year<<endl;
    }
}

int main()
{
    isLeapYearTest();
    return 0;
}
